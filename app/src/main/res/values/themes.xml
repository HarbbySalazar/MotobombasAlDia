<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MotobombasAlDia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gris</item>
        <item name="colorPrimaryVariant">@color/gris</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="titulos">
        <item name="android:textColor">@color/azul</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txtLogin">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">Arial</item>
        <item name="android:background">@color/naranja_claro</item>
    </style>
    <style name="botones">
        <item name="android:background">@color/gris</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="splashapp" parent="Theme.MotobombasAlDia">
        <item name="android:windowBackground">@drawable/splash</item>

    </style>
</resources>